---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Infórmate sobre la obtención de la nacionalidad a través de la Ley de Memoria Democrática (LMD)" />
		<meta name="keywords" content="LMD, Ley de Memoria Democrática, Nacionalidad Española, España, Cuba, La Habana, Consulado, Embajada" />
		<!-- <meta name="author" content="" /> -->
		<meta name="robots" content="index, follow" />
		<meta name="theme-color" content="#883aeb" />
		<meta name="twitter:card" content="summary" />
		<!-- <meta name="twitter:site" content="@x" />
		<meta name="twitter:creator" content="@x" /> -->
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="Infórmate sobre la obtención de la nacionalidad a través de la Ley de Memoria Democrática (LMD)" />
		<meta name="twitter:url" content="https://lmd.nubecita.dev" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Infórmate sobre la obtención de la nacionalidad a través de la Ley de Memoria Democrática (LMD)" />
		<meta property="og:image" content="/logo.webp" />
		<meta property="og:url" content="https://lmd.nubecita.dev" />
		<meta property="og:site_name" content="Nacionalidad Ley de Memoria Democrática" />
		<meta property="og:locale" content="es_ES" />


		<link rel="icon" type="image/svg+xml" href="/logo.webp" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
